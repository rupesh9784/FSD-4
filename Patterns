//L003
//p9
class Solution {

    void printDiamond(int n) {
        // Your code here
        int nsp = n-1, nst = 1;
        for(int i =1; i<=2*n; i++){
            //space
            for(int j = 1; j<=nsp; j++){
                System.out.print(" ");
            }
            //star
            for(int j = 1; j<=nst; j++){
                System.out.print("* ");
            }
            //next line
            System.out.println();
            if(i<n){
                nsp--;
                nst++;
            }
            if(i>n){
                nsp++;
                nst--;
            }
            
        }
        
    }
}

//p10
class Solution {

    void printTriangle(int n) {
        int nst = 1;
        for(int i =1; i<=2*n-1; i++){
            for(int j =1; j<=nst; j++){
                System.out.print("* ");
            }
            System.out.println();
            if(i<n) nst++;
            else nst--;
        }
    }
}

//p11
class Solution {

    void printTriangle(int n) {
        // code here
       
        int sp =1;
        for(int i =1; i<=n; i++){
            int val = sp;
            for(int j = 1; j<=i; j++){
                System.out.print(val+" ");
                if(val==1) val = 0;
                else val = 1;
            }
            //next line
            System.out.println();
            if(sp == 1) sp = 0;
            else sp = 1;
        }
    }
}

